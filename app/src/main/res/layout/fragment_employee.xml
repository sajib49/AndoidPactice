<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ssajib.navigationdrawer.fragment.EmployeeFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Employee"
        android:textStyle="normal|bold"
        android:textSize="30sp" />

    <ListView
        android:layout_width="match_parent"
        android:id="@+id/lvEmployee"
        android:layout_height="312dp" />

    <Button
        android:text="Get Employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnGetEmployee" />

    <Button
        android:text="Clear Employee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnClearEmployee" />

</LinearLayout>
